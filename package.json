{
  "name": "rapid-portfinder",
  "version": "1.0.4",
  "description": "A fast utility to find, scan, and reserve available network ports in Node.js applications.",
  "license": "MIT",
  "keywords": [
    "port",
    "portfinder",
    "free-port",
    "open-port",
    "port-scanner",
    "port-detection",
    "network",
    "tcp",
    "udp",
    "server",
    "nodejs",
    "find-port",
    "reserve-port",
    "network-utilities",
    "port-availability"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xuanhoa88/rapid-portfinder.git"
  },
  "author": {
    "name": "XuaNguyen",
    "email": "xuan.0211@gmail.com"
  },
  "engines": {
    "node": ">=14.x"
  },
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "rebuild": "npm run build",
    "test": "jest",
